        <createTable tableName="exercise">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nr_of_reps" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="nr_of_series" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="weight" type="double">
                <constraints nullable="true" />
            </column>
            <column name="order_nr" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="exercise_type_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="workout_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
